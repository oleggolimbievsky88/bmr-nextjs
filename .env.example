# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=bmrsuspension

# Credit card token encryption (REQUIRED for checkout when saving card data)
# Generate: openssl rand -hex 32
# Add to .env.local and to Vercel/production env. Must be 64 hex characters.
CC_ENCRYPTION_KEY= your-encryption-key-here

# SEO / Site URL (for metadata, sitemap, robots, Open Graph)
# Production: https://www.bmrsuspension.com
NEXT_PUBLIC_SITE_URL=https://www.bmrsuspension.com

# Optional: OG/Twitter image URL (1200x630 recommended). Default: {SITE_URL}/images/bmr-logo.png
# NEXT_PUBLIC_OG_IMAGE_URL=https://www.bmrsuspension.com/og-image.png

# NextAuth (REQUIRED for login/session)
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# API URLs